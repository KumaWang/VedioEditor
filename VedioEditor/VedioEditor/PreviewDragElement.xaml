<UserControl x:Class="VedioEditor.PreviewDragElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VedioEditor"
             xmlns:metro="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Root" MouseEnter="Root_MouseEnter" MouseLeave="Root_MouseLeave">
        <Grid.RowDefinitions>
            <RowDefinition Height="16" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" x:Name="PART_Border" MouseDown="Border_MouseDown" MouseMove="Border_MouseMove">
            <StackPanel Height="Auto" Background="CornflowerBlue">
                <metro:MetroTextButton HorizontalAlignment="Right" Width="10" Content="x" Click="AduSysButton_Click"></metro:MetroTextButton>
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
